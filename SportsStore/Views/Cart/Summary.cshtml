@model SportsStore.Domain.Entities.Cart
<div class="navbar-right hidden-xs">
    @*hiding button for small screen*@
@Html.ActionLink("Checkout", "Summary", "Cart",
        new {
            returnUrl = Request.Url.PathAndQuery
        },
        new {
            @class = "btn btn-default navbar-btn"
        })
</div>
<div class="navbar-right visible-xs">
    @*let's show icon for small screen*@
    <a class="btn btn-default navbar-btn"
       href=@Url.Action("Index", "Cart",
                new {returnUrl = Request.Url.PathAndQuery})>
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>
<div class="navbar-text navbar-right">
    <b class="hidden-xs">Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s)
    @Model.GetTotal().ToString("C")
</div>